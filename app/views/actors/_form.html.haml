= form_for @actor do |f|
  -if @actor.errors.any?
    #error_explanation
      %h2= "#{pluralize(@actor.errors.count, "error")} prohibited this actor from being saved:"
      %ul
        - @actor.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :pic
    = f.text_field :pic
  .actions
    = f.submit 'Save'
